---
import Nav from '../components/Nav.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>TechGear Shop - Latest Tech Gadgets</title>
    <link href="/pagefind/pagefind-ui.css" rel="stylesheet">
    <script is:inline src="/pagefind/pagefind-ui.js"></script>
  </head>
  <body class="bg-gray-50 flex flex-col min-h-screen">
    <Nav />
    <!-- Add pt-16 to account for fixed navbar height -->
    <div class="pt-16 flex-grow">
      <slot />
    </div>
    
    <footer class="bg-gray-900 text-white py-12">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">TechGear</h3>
            <p class="text-gray-400">
              Your premier destination for cutting-edge technology and gadgets.
            </p>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href="/" class="text-gray-400 hover:text-white transition">Home</a></li>
              <li><a href="/products" class="text-gray-400 hover:text-white transition">Products</a></li>
              <li><a href="/blog" class="text-gray-400 hover:text-white transition">Blog</a></li>
              <li><a href="/about" class="text-gray-400 hover:text-white transition">About</a></li>
              <li><a href="/contact" class="text-gray-400 hover:text-white transition">Contact</a></li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Categories</h3>
            <ul class="space-y-2">
              <li><a href="/products" class="text-gray-400 hover:text-white transition">Audio</a></li>
              <li><a href="/products" class="text-gray-400 hover:text-white transition">Gaming</a></li>
              <li><a href="/products" class="text-gray-400 hover:text-white transition">Wearables</a></li>
              <li><a href="/products" class="text-gray-400 hover:text-white transition">Accessories</a></li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Contact Info</h3>
            <ul class="space-y-2 text-gray-400">
              <li>123 Tech Street</li>
              <li>Silicon Valley, CA 94025</li>
              <li>support@techgear.com</li>
              <li>+1 (555) 123-4567</li>
            </ul>
          </div>
        </div>
        
        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
          <p>&copy; {new Date().getFullYear()} TechGear. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
</style>